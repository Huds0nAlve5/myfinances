generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Conta {
  codigo Int @id @default(autoincrement())
  conta String 
  saldo Decimal @db.Decimal(6, 2)
  receitas Receita[]
  despesas Despesa[]

  @@map("contas")
}

model Receita {
  codigo Int @id @default(autoincrement())
  saldo Decimal @db.Decimal(6, 2)
  data_inclusao DateTime @default(now())
  conta Conta @relation(fields: [conta_id], references: [codigo])
  conta_id Int

  @@map("receitas")
}

model Despesa {
  codigo Int @id @default(autoincrement())
  saldo Decimal @db.Decimal(6, 2)
  data_inclusao DateTime @default(now())
  conta Conta @relation(fields: [conta_id], references: [codigo])
  conta_id Int

  @@map("despesas")
}